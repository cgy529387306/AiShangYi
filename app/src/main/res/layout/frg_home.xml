<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/base_orange"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txv_home_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_home_arrow_down"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="乌鲁木齐"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text" />

        <TextView
            android:id="@+id/edt_home_search"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext_circle"
            android:drawableLeft="@drawable/ic_home_search"
            android:drawablePadding="6dp"
            android:text="搜索老师/课程"
            android:singleLine="true"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/common_text" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_home_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_home_msg" />
            <ImageView
                android:id="@+id/imv_msg_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:visibility="gone"
                android:src="@drawable/ic_msg_new"/>
        </FrameLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/common_listview"/>
</LinearLayout>