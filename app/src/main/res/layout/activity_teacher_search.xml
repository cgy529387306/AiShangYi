<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/base_orange"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/lin_actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_actionbar_back"
                android:id="@+id/imageView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/shape_edittext_circle"
            android:layout_height="36dp">
            <com.weima.aishangyi.widget.ClearableEditText
                android:id="@+id/edt_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:imeOptions="actionSearch"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜索老师"
                android:textColorHint="@color/hint_color"
                android:singleLine="true"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/common_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/txv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_tab"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_filter_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/btn_filter"
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/btn_text_gray_orange"
            android:textSize="@dimen/common_text"/>
        <TextView
            android:id="@+id/btn_filter_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/btn_filter"
            android:gravity="center"
            android:text="排序"
            android:textColor="@drawable/btn_text_gray_orange"
            android:textSize="@dimen/common_text"/>
        <TextView
            android:id="@+id/btn_filter_condition"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/btn_filter"
            android:gravity="center"
            android:text="筛选"
            android:textColor="@drawable/btn_text_gray_orange"
            android:textSize="@dimen/common_text"/>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/common_listview"/>
</LinearLayout>